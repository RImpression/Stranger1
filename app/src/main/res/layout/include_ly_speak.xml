<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/btn_speak"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_voice"
        android:contentDescription="@string/action_settings"
        android:padding="15dp"
        android:visibility="gone" >
    </ImageView>

    <TextView
        android:id="@+id/tv_voice_tips_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_speak"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/voice_up_tips_2"
        android:textColor="@color/text_gray"
        android:textSize="14sp" >
    </TextView>

    <ImageView
        android:id="@+id/iv_record"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_voice_1"
        android:contentDescription="@string/action_settings"
        android:padding="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_voice_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_record"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/voice_up_tips"
        android:textColor="@color/text_gray"
        android:textSize="14sp"
        android:visibility="gone" >
    </TextView>

</RelativeLayout>