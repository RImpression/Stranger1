<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="40dp"
        android:layout_marginTop="50dp">
        <ImageView 
            android:id="@+id/signup_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/photo_normal"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_signup"
        android:layout_gravity="center">
        
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        android:paddingLeft="7dp"
	        android:paddingTop="30dp">
	        <EditText 
	            android:id="@+id/signup_username"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="20dp"
	            android:textColorHint="#ffffff"
	            android:paddingLeft="30dp"
	            android:paddingTop="4dp"
	            android:paddingBottom="4dp"
	            android:singleLine="true"
	            android:maxLength="12"
	            android:background="@drawable/layout_inputedit"
	            android:hint="账号"/>
    	</LinearLayout>
    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        android:paddingLeft="7dp"
	        android:layout_marginTop="25dp">
	        <EditText 
	            android:id="@+id/signup_password"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:textSize="20dp"
	            android:hint="密码"
	            android:paddingLeft="30dp"
	            android:paddingTop="4dp"
	            android:paddingBottom="4dp"
	            android:textColorHint="#ffffff"
	            android:singleLine="true"
	            android:maxLength="12"
	            android:background="@drawable/layout_inputedit"
	            android:password="true"/>
	    </LinearLayout>
    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_horizontal"
	        android:paddingLeft="7dp"
	        android:layout_marginTop="25dp"
	        android:paddingBottom="30dp">
	        <EditText 
	            android:id="@+id/signup_surepassword"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:password="true"
	            android:textSize="20dp"
	            android:paddingLeft="30dp"
	            android:paddingTop="4dp"
	            android:paddingBottom="4dp"
	            android:textColorHint="#ffffff"
	            android:singleLine="true"
	            android:maxLength="12"
	            android:background="@drawable/layout_inputedit"
	            android:hint="确认密码"/>
    	</LinearLayout>
        
    </LinearLayout>
    
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:paddingTop="60dp"
         android:gravity="center">
         <Button 
	         android:id="@+id/signup_bt"
	         android:layout_width="300dp"
	         android:layout_height="36dp"
	         android:text="注册"
	         android:textColor="@drawable/login_textcolor_change"
	         android:background="@drawable/login_button_change"
	         android:layout_alignParentBottom="true"/>
     </LinearLayout>

</LinearLayout>
